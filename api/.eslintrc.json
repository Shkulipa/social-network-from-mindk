{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "plugin:node/recommended",
        "google",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "node/exports-style": ["error", "module.exports"],
        "quotes": ["error", "double"],
        "require-jsdoc": "off",
        "new-cap": ["error", { "capIsNew": false }],
        "node/no-unpublished-require": ["error", {
            "allowModules": ["node-fetch", "dote-env"]
        }],
        "no-invalid-this": 0,
        "no-useless-catch": "error"
    }
}
