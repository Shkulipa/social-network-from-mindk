{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "react-app",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 100,
                "tabWidth": 4,
                "useTabs": true,
                "jsxSingleQuote": false,
                "singleQuote": false,
                "endOfLine": "auto",
                "fileInfoOptions": {
                    "withNodeModules": true
                }
            }
        ]
    }
}
